<!--リスト 5.13:header用のパーシャル-->
<!--リスト 8.19:ログイン中のユーザー用のレイアウトのリンクを変更する-->
<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", root_path, id: "logo" %>
    <nav>
      <!-- リスト 8.28:ハンバーガーメニュー用のマークアップを追加する-->
      <div class="navbar-header">
        <button id="hamburger" type="button" class="navbar-toggle collapsed">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <ul id="navbar-menu" class="nav navbar-nav navbar-right collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Help", help_path %></li>

          <!--ログインしているか-->
          <% if logged_in? %>
            <!--ログインしていればユーザメニューが出る。-->
            <!--<li><%= link_to "Users", '#' %></li>-->
            <li><%= link_to "Users", users_path %></li><!--リスト10.41-->
            <li class="dropdown">
              <a href="#" id="account" class="dropdown-toggle">
                Account <b class="caret"></b>
              </a>
              <ul id="dropdown-menu" class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li> <%#リスト10.4追加分%>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path,data: { "turbo-method": :delete } %>
                </li>
              </ul>
            </li>
          <% else %>
            <!--ログインしてなければ、ログインリンクしかでない。-->
            <li><%= link_to "Log in", login_path %></li>
          <% end %>
        </ul>
      </ul>
    </nav>
  </div>
</header>
